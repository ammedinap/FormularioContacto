<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.xoff.formulariocontacto.ConfirmarDatos"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Datos"
        android:id="@+id/confirmarDatos"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/textoConfirmar"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/Nombre"
        android:layout_below="@+id/confirmarDatos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txFecha"
        android:layout_below="@+id/confirmarDatos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre completo"
        android:layout_below="@+id/confirmarDatos"
        />

    <EditText
        android:id="@+id/tvTextoFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Nacimiento "
        android:layout_below="@+id/tvNombre"
        />

    <EditText
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2000"
        android:layout_below="@+id/tvNombre"
        android:layout_toRightOf="@+id/tvTextoFecha"
        />

    <EditText
        android:id="@+id/tvTextoTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel. "
        android:layout_below="@+id/tvTextoFecha"
        />
    <EditText
        android:id="@+id/tvTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="555-123-456"
        android:layout_below="@+id/tvFecha"
        android:layout_toRightOf="@+id/tvTextoTelefono"
        />

    <EditText
        android:id="@+id/tvTextoEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:layout_below="@+id/tvTextoTelefono"
        />
    <EditText
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uno@ejemplo.com"
        android:layout_below="@+id/tvTelefono"
        android:layout_toRightOf="@+id/tvTextoEmail"
        />

    <EditText
        android:id="@+id/tvTextoDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion: "
        android:layout_below="@+id/tvTextoEmail"
        />
    <EditText
        android:id="@+id/tvDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textocompleto de la descripcion"
        android:layout_below="@+id/tvEmail"
        android:layout_toRightOf="@+id/tvTextoDescripcion"
        />


    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescripcion"
        android:text="@string/texto_botonEditar"
        android:theme="@style/miBotonRaised"
        android:onClick="volverMain"
        android:layout_alignRight="@+id/tvFecha"
        android:layout_alignEnd="@+id/tvFecha"
        android:layout_toEndOf="@+id/tvTextoTelefono"
        android:layout_alignLeft="@+id/confirmarDatos"
        android:layout_alignStart="@+id/confirmarDatos" />





</RelativeLayout>
